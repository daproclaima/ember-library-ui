{{page-title "Create"}}
<div class="slide-out-bg"></div>
<div class="slide-out">
    <div class="slide-out-card">
        <LinkTo @route="author" class="btn-back">
            <span class="sr-only">Back</span>
        </LinkTo>

        <div class="slide-out-heading">
            <div class="title">
                <h3>New Author</h3>
            </div>
        </div>

        <div class="slide-out-content">
            <form {{on "submit" this.saveAuthor}}>
                <div class="field">
                    <label for="firstName">First Name: {{@model.firstName}}</label>
                    <Input placeholder="First Name" @value={{@model.firstName}} id="firstName"/>
                </div>

                <div class="field">
                    <label for="lastName">Last Name: {{@model.lastName}}</label>
                    <Input placeholder="Last Name" @value={{@model.lastName}} id="lastName"/>
                </div>

                <div class="form-footer">
                    <button type="submit" class="btn-submit">save</button>
                </div>
            </form>
        </div>
    </div>
</div>
