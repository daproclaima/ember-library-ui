{{page-title "Author"}}
<div class="panel-heading">
    <div class="search">
        <label>
            <input type="text" placeholder="Search by Author Name">
        </label>
    </div>

    <a href>
        <div class="sr-only">Add New Author</div>
    </a>
</div>

<div class="panel-content">
    <h3 class="panel-title">Authors</h3>
    <ul class="collection">
    {{#each @model as |author|}}
        <AuthorListItem @firstName={{author.firstName}} @lastName={{author.lastName}}/>
    {{/each}}
    </ul>
</div>
{{outlet}}
