{{page-title "Author"}}
<div class="panel-heading">
    <div class="search">
        <label>
            <Input @type="text" placeholder="Search by Author Name" @value={{this.search}}/>
        </label>
    </div>

    <LinkTo @route="author.create" class="btn-new">
        <div class="sr-only">Add New Author</div>
    </LinkTo>
</div>

<div class="panel-content">
    <h3 class="panel-title">Authors</h3>
    <ul class="collection">
    {{#each @model as |author|}}
        <AuthorListItem @firstName={{author.firstName}} @lastName={{author.lastName}} @authorId={{author.id}}/>
    {{/each}}
    </ul>
</div>

{{liquid-outlet class='slide-container'}}
