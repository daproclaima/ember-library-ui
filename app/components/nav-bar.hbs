<nav class={{@class}}>
    <h1 class="logo">
        <LinkTo @route="index">
            <img src="/assets/svg/logo.svg" alt="Ember Library For my Lilly">
            <span class="sr-only">Ember Library For my Lilly</span>
        </LinkTo>
    </h1>

    <ul>
        <li><LinkTo @route="author">Authors</LinkTo></li>
        <li><LinkTo @route="book">Books</LinkTo></li>
        {{#if this.session.isAuthenticated}}
            <li><a href="#" {{on "click" this.logout}}>Logout</a></li>
        {{else}}
        <li><LinkTo @route="register">Register</LinkTo></li>
        <li><LinkTo @route="login">Login</LinkTo></li>
        {{/if}}
    </ul>

    {{#if this.currentUser.user}}
        <div class="current-user">
            Hello <strong>{{this.currentUser.user.username}}</strong>
        </div>
    {{/if}}

</nav>
